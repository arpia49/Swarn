<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/detLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10sp">
	<Button android:id="@+id/botonEditar" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Editar alarma"
		android:layout_alignParentLeft="true"></Button>

	<Button android:text="Borrar alarma" android:id="@+id/botonEliminar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/botonEditar"
		android:layout_alignParentRight="true"></Button>
</RelativeLayout>
