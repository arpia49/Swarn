<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.arpia49" android:versionCode="1" android:versionName="0.018">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".VistaAlarmas" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".AddAlarma" android:label="@string/menu_add_alarma">
			<intent-filter>
				<action android:name="android.intent.action.ADD_ALARMA" />
				<category android:name="android.intent.category.ALARMAS" />
			</intent-filter>
		</activity>
		<activity android:name=".DelAlarmas" android:label="@string/menu_del_alarma">
			<intent-filter>
				<action android:name="android.intent.action.DEL_ALARMA" />
				<category android:name="android.intent.category.ALARMAS" />
			</intent-filter>
		</activity>
		<activity android:name=".ListarAlertas" android:label="@string/menu_lista_alertas">
			<intent-filter>
				<action android:name="android.intent.action.LISTAR_ALERTAS" />
				<category android:name="android.intent.category.ALERTAS" />
			</intent-filter>
		</activity>
	
	</application>
	<uses-sdk android:minSdkVersion="4" />
	<uses-feature android:name="android.hardware.microphone" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
</manifest> 