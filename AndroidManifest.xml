			</intent-filter>
		</activity>
		<activity android:name=".VistaAlarmaCrear" android:label="@string/menu_add_alarma" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.ADD_ALARMA" />
				<category android:name="android.intent.category.ALARMAS" />
			</intent-filter>
		</activity>
		<activity android:name=".VistaAlarmaEditar" android:label="@string/menu_edit_alarma" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.EDITAR_ALARMA" />
				<category android:name="android.intent.category.ALARMAS" />
			</intent-filter>
		</activity>
		<activity android:name="VistaListarAlarmasBorrar"
			android:label="@string/menu_del_alarma" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.LISTAR_ALARMAS_BORRAR" />
				<category android:name="android.intent.category.ALARMAS" />
			</intent-filter>
		</activity>
		<activity android:name="VistaListarAlarmasEditar"
			android:label="@string/menu_edit_alarma" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.LISTAR_ALARMAS_EDITAR" />
				<category android:name="android.intent.category.ALARMAS" />
			</intent-filter>
		</activity>
		<activity android:name=".VistaNotificaciones" android:label="@string/menu_lista_notificaciones" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.LISTAR_ALERTAS" />
				<category android:name="android.intent.category.ALERTAS" />
			</intent-filter>
		</activity>
		<activity android:name=".VistaNotificacion" android:label="@string/menu_detalle_notificacion" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.DETALLE_ALERTA" />
				<category android:name="android.intent.category.ALERTAS" />
			</intent-filter>
		</activity>
		<activity android:name=".VistaConfiguracion" android:label="@string/menu_config" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.CONFIGURACION" />
				<category android:name="android.intent.category.CONFIGURACION" />
			</intent-filter>
		</activity>
		<activity android:name=".VistaSonidos" android:label="@string/menu_sonidos" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.SONIDOS" />
				<category android:name="android.intent.category.CONFIGURACION" />
			</intent-filter>
		</activity>
		<uses-library android:name="com.google.android.maps" />
	</application>
	<uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.FLASHLIGHT" />
</manifest> 